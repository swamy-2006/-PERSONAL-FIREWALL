{
  "rules": [
    {
      "action": "allow",
      "protocol": "TCP",
      "dst_port": 22,
      "comment": "Allow SSH access (important for remote management)"
    },
    {
      "action": "allow",
      "protocol": "TCP",
      "dst_port": 443,
      "comment": "Allow HTTPS websites (secure browsing)"
    },
    {
      "action": "allow",
      "protocol": "TCP",
      "dst_port": 80,
      "comment": "Allow HTTP websites (regular browsing)"
    },
    {
      "action": "allow",
      "protocol": "UDP",
      "dst_port": 53,
      "comment": "Allow DNS lookups (essential for internet)"
    },
    {
      "action": "block",
      "protocol": "ICMP",
      "comment": "Block ping requests (stealth mode)"
    },
    {
      "action": "block",
      "src_ip": "192.168.1.666",
      "comment": "Block suspicious IP address"
    },
    {
      "action": "block",
      "protocol": "TCP",
      "dst_port": 23,
      "comment": "Block insecure Telnet protocol"
    },
    {
      "action": "block",
      "protocol": "TCP",
      "dst_port": 21,
      "comment": "Block insecure FTP protocol"
    },
    {
      "action": "log",
      "protocol": "TCP",
      "dst_port": 3389,
      "comment": "Log Windows Remote Desktop attempts"
    },
    {
      "action": "allow",
      "protocol": "UDP",
      "dst_port": 123,
      "comment": "Allow NTP time synchronization"
    }
  ]
}
